<h3>Sign In</h3>

<%= form_tag "/login" do %>

    <p>
      <%= label_tag "name" %>
      <%= text_field_tag "name" %>
    </p>

    <p>
      <%= label_tag "password" %>
      <%= password_field_tag "password" %>
    </p>

    <p>
        <%= submit_tag "Let Me In", class: 'button' %>

        or

        <%= link_to "Cancel", "/" %>
    </p>

<% end %>

<div id="user-widget">

    <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, id: "sign_in" %>

</div>