<h2>Site Statistics</h2>


  <p><strong>
    Total Users: <%= User.count.to_s %>
  </p>

  <p><strong>
    User Rank:
  </p>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Points</th>
        <th>Rank</th>
      </tr>
    </thead>

    <tbody>
      <% count = 1 %>
      <% @rank_users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.points%></td>
        <td><%= count %></td>
        <% count += 1 %>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br><br><br><br>

  <p><strong>
    Total Reservtions: <%= Reservation.count %>
  </p>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Customer Number</th>
        <th>Rank</th>
      </tr>
    </thead>

    <tbody>
      <% count = 1 %>
      <% @rank_restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant[0] %></td>
        <td><%= restaurant[1]%> </td>
        <td><%= count %></td>
        <% count += 1 %>
      </tr>
      <% end %>
    </tbody>
  </table>