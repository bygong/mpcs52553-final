<% user = User.find_by(id: session["user_id"]) %>
<br>
<% if @user.present? and @user.admin==true %>
<p><%= link_to "All reservation", "/restaurants/#{@restaurant.id}/all_reservation", class: "btn btn-info"  %></p>
<% end %>
<h3>Restaurant #<%= @restaurant.name %></h3>


<p><strong>Name:</strong> <%= @restaurant.name %> </p>
<p><strong>Address: </strong> <%=  %></p>
<p><strong>Style:</strong> <%=  %></p>
<p><strong>Table in total:</strong> <%= @restaurant.table_number %></p>


<table class="table table-striped">
    <thead>
      <tr>
        <% if user.present? %>
        <th></th>
        <% end %>
        <th>Date</th>
        <th>Table left</th>
      </tr>
    </thead>
    <tbody>

      <% @restaurant.date_segments.each do |date| %>

        <tr>
            <% if user.present? %>
            <td><%= link_to "Book", "/reservations/new?date_seg=#{date.id}" %>
            <% end %>
            <td>
              
              <%= date.date %>

            <td><%= date.table_left %></td>
        </tr>

      <% end %>
    </tbody>
  </table>