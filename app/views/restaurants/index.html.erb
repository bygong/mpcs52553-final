<% user = User.find_by(id: session["user_id"]) %>
<br>
<% if user.present? and user.admin%>
<p><%= link_to "Add a restaurant", "/restaurants/new", class: "btn btn-info" %> </p>
<% else %>
  <p></p>
<% end %>

  <table class="table table-striped">
    <thead>
      <tr>
        <% if user.present? and user.admin%>
        <th></th>
        <th></th>
        <% end %>
        <th></th>
        <th>Table number</th>
      </tr>
    </thead>
    <tbody>

      <% @restaurants.each do |restaurant| %>

        <tr>
            <% if user.present? and user.admin%>
            <td><%= link_to "Toast", "/restaurants/#{restaurant.id}", method: 'delete' %>
            <td><%= link_to "Edit", "/restaurants/#{restaurant.id}/edit" %>
            <% end %>
            <td>
              
              <%= link_to "#{restaurant.name}", "/restaurants/#{restaurant.id}" %>

            <td><%= restaurant.table_number %></td>
        </tr>

      <% end %>
    </tbody>
  </table>
